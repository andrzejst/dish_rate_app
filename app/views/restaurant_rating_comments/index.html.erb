<h1>Listing restaurant_rating_comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Restaurant rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurant_rating_comments.each do |restaurant_rating_comment| %>
      <tr>
        <td><%= restaurant_rating_comment.content %></td>
        <td><%= restaurant_rating_comment.user_id %></td>
        <td><%= restaurant_rating_comment.restaurant_rating_id %></td>
        <td><%= link_to 'Show', restaurant_rating_comment %></td>
        <td><%= link_to 'Edit', edit_restaurant_rating_comment_path(restaurant_rating_comment) %></td>
        <td><%= link_to 'Destroy', restaurant_rating_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant rating comment', new_restaurant_rating_comment_path %>
