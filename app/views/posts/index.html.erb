<div class="clear_both" style="text-align: left; border: 1px solid black;">
    <% @posts.each do |post| %>
      <%= div_for post do %>
    <table style="width: 100%;">
          <tr>
        <td class="post_title "><%= post.title %></td>
        <td class="post_content "><%= post.content %></td>
        <td class=""><%= post.user_id %></td>
        <td class=""><%= post.dish_id %></td>
        <td>
            <div class="actions">
                <span><%= link_to 'Show', post %></span>
                <span><%= link_to 'Edit', edit_post_path(post) %></span>
                <span><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></span>
        </div>
                        
        </td>
      </tr>
    </table>
    <% end %>
  <% end %>
</div>


