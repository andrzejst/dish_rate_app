<h1>Listing posts</h1>

<table style="border: 2px solid blue;">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>

      <th colspan="3"></th>
    </tr>
  </thead>
</table>

    <% @posts.each do |post| %>
      <%= div_for post do %> 
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user_id %></td>
<div class="actions">
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
</div>    
<% end %>
    <% end %>


<br>

